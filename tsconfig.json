{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "es5",
        "lib": ["es6", "es5", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "typeRoots": ["node_modules/@types"]
    },
    "exclude": [
        "node_modules",
        "dist",
        "scripts",
        "example",
        "/src/**/?(*.)test.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true
    },
    "atom": {
        "rewriteTsconfig": false
    }
}
